extends layout

block content
    // Row
    .row
      .col-md-12
        // Miner info
        #minerInfo
            h2= title
            .row
                .col-md-12
                    p.pull-right#warningmsg
            .row
                .col-md-12
                    p.pull-left#minerSummary
                    p.pull-right#lastUpdated
            
            table.table.table-bordered.table.hover
                thead
                    th Name
                    th Host
                    th Uptime
                    th ETH&nbsp;Stats
                    
                    if hashrates
                        th ETH/CARD
                    
                    th Temp:Fan
                    th Pools
                    th Ver
                    th Comments
                tbody
        
        
        // /Miner info
    // /Wrapper
